#!/bin/bash
# Repo-specific wrapper script
# Delegates to utils/incident_manager.py

# Find repo root (for when called from subdirectories)
REPO_ROOT="$(git rev-parse --show-toplevel 2>/dev/null || dirname "$0")"

# Validate the Python script exists
if [[ ! -f "$REPO_ROOT/utils/incident_manager.py" ]]; then
    #echo "Error: incident_manager.py not found at $REPO_ROOT/utils/" >&2
    exit 1
fi

# Run it
python "$REPO_ROOT/utils/incident_manager.py" "$@"
